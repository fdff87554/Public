set cursorline
set mouse=a
set ruler
set history=500
set incsearch
set hlsearch
set autoread
au FocusGained,BufEnter * checktime
set cmdheight=1
set hid
set ignorecase
set smartcase
set lazyredraw
set magic
set showmatch
set mat=2

filetype plugin on
filetype indent on

syntax enable

set encoding=utf8
set ffs=unix,dos,mac

set nobackup
set nowb
set noswapfile

set expandtab
set smarttab
set shiftwidth=4
set tabstop=4

set lbr
set tw=500

set ai
set si
set wrap
set nu
